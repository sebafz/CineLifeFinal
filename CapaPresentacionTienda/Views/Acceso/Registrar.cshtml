@model CapaEntidad.Cliente
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" type="image/png" href="~/Images/faviconSinFondo.png" />
    <title>Registrarse - CineLife</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    <link href="~/Content/extras.css" rel="stylesheet">

</head>
<body class="bg-gradient-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="card o-hidden border-0 shadow-lg my-5">
                            <div class="card-body p-0 flex-fill">

                                <div class="row">
                                    <div class="col-lg-6 d-none d-lg-block bg-register-image"></div>
                                    <div class="col-lg-6">
                                        <div class="card-header fondo-blanco"><h3 class="text-center font-weight-light my-4">Crear una cuenta</h3></div>
                                        <div class="card-body">
                                            <form action="@Url.Action("Registrar","Acceso")" method="post">
                                                <div class="row mb-3">
                                                    <div class="col-md-6">
                                                        <div class="form-floating mb-3 mb-md-0">
                                                            @Html.TextBoxFor(m => m.Nombres, new { @class = "form-control", @id = "txtnombre", @placeholder = ".", value = ViewData["Nombres"] })
                                                            @Html.Label("txtnombre", "Nombres")
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-floating mb-3 mb-md-0">
                                                            @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control", @id = "txtapellidos", @placeholder = ".", value = ViewData["Apellidos"] })
                                                            @Html.Label("txtapellidos", "Apellidos")
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row mb-3">
                                                    <div class="col-md-6">
                                                        <div class="form-floating mb-3 mb-md-0">
                                                            @Html.TextBoxFor(m => m.Correo, new { @class = "form-control", @id = "txtcorreo", @placeholder = ".", value = ViewData["Correo"] })
                                                            @Html.Label("txtcorreo", "Correo")
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-floating mb-3 mb-md-0">
                                                            @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", @id = "txttelefono", @placeholder = ".", value = ViewData["Telefono"] })
                                                            @Html.Label("txttelefono", "Telefono")
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-floating mb-2 mb-md-0">
                                                            @Html.TextBoxFor(m => m.DNI, new { @class = "form-control", @id = "txtdni", @placeholder = ".", value = ViewData["DNI"] })
                                                            @Html.Label("txtdni", "DNI")
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-floating mb-2 mb-md-0">
                                                            @Html.TextBoxFor(m => m.Direccion, new { @class = "form-control", @id = "txtdireccion", @placeholder = ".", value = ViewData["Direccion"] })
                                                            @Html.Label("txtdireccioin", "Direccion")
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row mb-3">
                                                    <div class="col-sm-6 mt-md-2">
                                                        <label for="cboprovincia" class="form-label">Provincia</label>
                                                        <select id="cboprovincia" class="form-select color-gris">
                                                        </select>
                                                    </div>
                                                    <div class="col-sm-6 mt-md-2">
                                                        <label for="cbolocalidad" class="form-label">Localidad</label>
                                                        <select id="cbolocalidad" class="form-select color-gris">
                                                        </select>
                                                    </div>
                                                </div>


                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3">
                                                        @Html.TextBoxFor(m => m.oLocalidad.IdLocalidad, new { @class = "form-control", @id = "txtlocalidad", @placeholder = ".", value = ViewData["Localidado"], @type = "hidden" })
                                                        @Html.Label("txtlocalidad", "Localidad")
                                                    </div>
                                                </div>


                                                <div class="row mb-3">
                                                    <div class="col-md-6">
                                                        <div class="form-floating mb-3 mb-md-0">
                                                            @Html.PasswordFor(m => m.Clave, new { @class = "form-control", @id = "txtclave", @placeholder = "." })
                                                            @Html.Label("txtclave", "Contraseña")
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-floating mb-3 mb-md-0">
                                                            @Html.PasswordFor(m => m.ConfirmarClave, new { @class = "form-control", @id = "txtconfirmaclave", @placeholder = "." })
                                                            @Html.Label("txtconfirmaclave", "Confirmar Contraseña")
                                                        </div>
                                                    </div>
                                                </div>

                                                @{
                                                    if (ViewBag.Error != null)
                                                    {
                                                        <div class="row mb-3">
                                                            <div class="alert alert-danger" role="alert">
                                                                @ViewBag.Error
                                                            </div>
                                                        </div>
                                                    }
                                                }

                                                <div class="mt-4 mb-0">
                                                    <div class="d-grid"><button class="btn btn-primary btn-block" type="submit">Crear Cuenta</button></div>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="card-footer text-center py-3 fondo-blanco">
                                            <div class="small"><a href="@Url.Action("Index","Acceso")" class="link-verde">¿Ya tenés una cuenta? Iniciá sesión acá</a></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
</main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto color-footer">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted color-texto-footer">Sistemas III - 2022 <i class="fas fa-bolt"></i> Fernandez Zavalía, Díaz, Dagum, Valdez Kao</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
</body>
</html>

<script>

    ListarProvincia();

    $(function() {
        var message = '@ViewBag.Message';
        if (message  != '')
            swal({
                title: "",
                text: "Tu cuenta se creó con éxito. Ahora podés iniciar sesión",
                type: "success"
            }, function () {
                window.location = "Index";
            });
    });

    function ListarProvincia() {

        $("<option>").attr({ "value": "00", "disabled":"disabled", "selected":"true" }).text("Seleccionar").appendTo("#cboprovincia")

        jQuery.ajax({
            url: '@Url.Action("ObtenerProvinciaArg", "Tienda")',
            type: "POST",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                if (data.lista != null) {

                    $.each(data.lista, function (i, item) {

                        $("<option>").attr({ "value": item.IdProvincia }).text(item.Descripcion).appendTo("#cboprovincia")
                    })

                    ListarLocalidad();
                }
            }
        })

    };

    $("#cboprovincia").on("change", function () {
        ListarLocalidad();
    });

    $("#cbolocalidad").on("change", function () {
        $("#txtlocalidad").val($("#cbolocalidad").val());
    });

    function ListarLocalidad() {

        $("#cbolocalidad").html("")

        $("<option>").attr({ "value": "00", "disabled": "disabled", "selected": "true" }).text("Seleccionar").appendTo("#cbolocalidad")

        jQuery.ajax({
            url: '@Url.Action("ObtenerLocalidadArg", "Tienda")',
            type: "POST",
            data: JSON.stringify({ IdProvincia: $("#cboprovincia option:selected").val() }),
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                if (data.lista != null) {

                    $.each(data.lista, function (i, item) {

                        $("<option>").attr({ "value": item.IdLocalidad }).text(item.Descripcion).appendTo("#cbolocalidad")
                    })

                }
            }
        })

    };

</script>