
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header-->
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Images/anuncio1.png" class="d-block w-100">
        </div>
        <div class="carousel-item">
            <img src="~/Images/anuncio4.png" class="d-block w-100">
        </div>
        <div class="carousel-item">
            <img src="~/Images/anuncio5.png" class="d-block w-100">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<!-- Section-->
<section>
    <div class="container-fluid px-5 my-5">

        <div class="row">

            <div class="col-sm-3">


                <div class="row mb-3">
                    <div class="col-sm-12">
                        <div class="card borde-gris">
                            <div class="card-header card-header-amarillo">
                                <div class="text-white">Género</div>
                            </div>
                            <div id="contenedor_genero" class="card-body card-body-gris">
                                
                            </div>
                        </div>
                    </div>

                </div>

                <div class="row mb-3">
                    <div class="col-sm-12">
                        <div class="card borde-gris">
                            <div class="card-header card-header-amarillo">
                                <div class="text-white">Clasificación</div>
                            </div>
                            <div id="contenedor_clasificacion" class="card-body card-body-gris">

                            </div>
                        </div>
                    </div>

                </div>

                <div class="row mb-3">
                    <div class="col-sm-12">
                        <div class="d-grid gap-2">
                            <button id="btnaplicarfiltro" class="btn btn-primary" type="button">
                                <i class="fas fa-filter"></i>Aplicar Filtros
                            </button>
                        </div>
                    </div>

                </div>



            </div>

            <div class="col-sm-9">

                <nav aria-label="Page navigation example">
                    <p class="text-black-50" style="color: #858796 !important">
                        Total de películas encontradas <span id="totalregistros">0</span>
                    </p>

                    <ul class="pagination justify-content-start">
                        <li class="page-item disabled card-body-gris">
                            <button class="page-link card-body-gris" href="#" tabindex="-1" aria-disabled="true">Anterior</button>
                        </li>
                        <li class="page-item card-body-gris active"><button class="page-link card-body-gris" href="#">1</button></li>
                        <li class="page-item card-body-gris"><button class="page-link card-body-gris" href="#">2</button></li>
                        <li class="page-item card-body-gris"><button class="page-link card-body-gris" href="#">3</button></li>
                        <li class="page-item card-body-gris">
                            <button class="page-link card-body-gris" href="#">Siguiente</button>
                        </li>
                    </ul>
                </nav>

                <div id="contenedor_producto" class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">Película</h5>
                                    <!-- Product price-->
                                    $900
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Opciones de vista</a></div>
                            </div>
                        </div>
                    </div>
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Sale badge-->
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Estreno</div>
                            <!-- Product image-->
                            <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">Película</h5>
                                    <!-- Product reviews-->
                                    <div class="d-flex justify-content-center small text-warning mb-2">
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                    </div>
                                    <!-- Product price-->
                                    <span class="text-muted text-decoration-line-through">$900.00</span>
                                    $800
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Elegir</a></div>
                            </div>
                        </div>
                    </div>



                </div>
            </div>


        </div>


    </div>
</section>


@section scripts{
    
    <script>
        $("#contenedor_categoria").LoadingOverlay("hide", {
            background: "rgba(28,28,28, 0.5)",
            imageColor: "#ffffff"
        });

        $("#contenedor_marca").LoadingOverlay("hide", {
            background: "rgba(28,28,28, 0.5)",
            imageColor: "#ffffff"
        });

        var _PaginaActual = 1;

        $(document).ready(function () {

            MostrarGeneros();
            MostrarClasificacion();
            MostrarPeliculas(0, 0)
        })
        


        function MostrarGeneros() {


            jQuery.ajax({
                url:"@Url.Action("ListarGeneros", "Tienda")",
                type: "GET",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (response) {

                    $("#contenedor_genero").LoadingOverlay("hide",{
                        background: "rgba(28,28,28, 0.5)",
                        imageColor: "#ffffff"
                    });

                    $("<div>").addClass("form-check").append(

                        $("<input>").addClass("form-check-input").attr({ "type": "radio", "name": "genero", "value": "0", "id": "cx", "checked": "checked" }),
                        $("<label>").addClass("form-check-label").text("Todos").attr({ "for": "cx"})
                    ).appendTo("#contenedor_genero")


                    $.each(response.data, function (i, element) {

                        $("<div>").addClass("form-check").append(
                            $("<input>").addClass("form-check-input").attr({ "type": "radio", "name": "genero", "value": element.IdGenero, "id": "c" + i}),
                            $("<label>").addClass("form-check-label").text(element.Descripcion).attr({ "for": "c" + i})
                        ).appendTo("#contenedor_genero")

                    })

                }

            })

        }


        function MostrarClasificacion() {

            jQuery.ajax({
                url:"@Url.Action("ListarClasificaciones", "Tienda")",
                type: "GET",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (response) {

                    $("#contenedor_clasificacion").LoadingOverlay("hide",{
                        background: "rgba(28,28,28, 0.5)",
                        imageColor: "#ffffff"
                    });

                    $("<div>").addClass("form-check").append(

                        $("<input>").addClass("form-check-input").attr({ "type": "radio", "name": "clasificacion", "value": "0", "id": "cx", "checked": "checked" }),
                        $("<label>").addClass("form-check-label").text("Todos").attr({ "for": "cx"})
                    ).appendTo("#contenedor_clasificacion")


                    $.each(response.data, function (i, element) {

                        $("<div>").addClass("form-check").append(
                            $("<input>").addClass("form-check-input").attr({ "type": "radio", "name": "clasificacion", "value": element.IdClasificacion, "id": "c" + i}),
                            $("<label>").addClass("form-check-label").text(element.Descripcion).attr({ "for": "c" + i})
                        ).appendTo("#contenedor_clasificacion")

                    })

                }

            })

        }

         function MostrarPeliculas(_idgenero, _idclasificacion) {


            jQuery.ajax({
                url:"@Url.Action("ListarPeliculasTienda", "Tienda")",
                type: "POST",
                data: JSON.stringify({ idgenero: _idgenero, idclasificacion: _idclasificacion, nroPagina : _PaginaActual}),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    $("#contenedor_producto").html("");
                    $("#contenedor_producto").LoadingOverlay("hide", {
                        background: "rgba(28,28,28, 0.5)",
                        imageColor: "#ffffff"
                    });

                    $.each(response.data, function (i, element) {

                        $("<div>").addClass("col mb-5").append(
                            $("<div>").addClass("card h-100").append(
                                $("<img>").addClass("card-img-top").attr({ "src": "data:image/" + element.Extension + ";base64," + element.Base64 }),
                                $("<div>").addClass("card-body p-0 pt-3").append(
                                    $("<div>").addClass("text-center").append(
                                        $("<h5>").addClass("fw-bolder").text(element.Nombre))
                                ),
                                 $("<div>").addClass("card-footer p-2 pt-0 border-top-0 bg-transparent").append(


                                     $("<div>").addClass("d-grid gap-2").append(


                                         $("<a>").addClass("btn btn-dark mt-auto")
                                             .attr({ "href": "@Url.Action("DetalleProducto","Tienda")" + "?idpelicula=" + element.IdPelicula})
                                             .text("Ver funciones")

                                     )

                                 )

                            )

                        ).appendTo("#contenedor_producto")

                    })



                    //EMPIEZA LOGICA
                    $("#totalregistros").text(response.totalRegistros);
                    var desactivo_ant = _PaginaActual == 1 ? " disabled" : ""
                    var desactivo_sig = response.totalPaginas == _PaginaActual ? " disabled" : ""
                    var rango = [];


                    if (_PaginaActual == 1)
                        rango.push(_PaginaActual, _PaginaActual + 1, _PaginaActual + 2)
                    else if (_PaginaActual == response.totalPaginas)
                        rango.push(_PaginaActual - 2, _PaginaActual - 1, _PaginaActual)
                    else
                        rango.push(_PaginaActual - 1, _PaginaActual, _PaginaActual + 1)

                    $(".pagination").html("");
                    $(".pagination").append(
                        $("<li>").addClass("page-item" + desactivo_ant).append(
                            $("<button>").addClass("page-link previus").text("Anterior")
                        )
                    )


                    for (nroPagina = 1; nroPagina <= response.totalPaginas; nroPagina++) {
                        if (rango.includes(nroPagina)) {
                            var clase = (nroPagina == _PaginaActual) ? " active" : "";
                            $(".pagination").append(
                                $("<li>").addClass("page-item" + clase).append(
                                    $("<button>").addClass("page-link").text(nroPagina)
                                )
                            )
                        }
                    }

                    $(".pagination").append(
                        $("<li>").addClass("page-item" + desactivo_sig).append(
                            $("<button>").addClass("page-link next").text("Siguiente")
                        )
                    )



                },
                beforeSend: function () {
                    $("#contenedor_producto").LoadingOverlay("show", {
                        background: "rgba(28,28,28, 0.5)",
                        imageColor: "black"
                    });
                }

            })

        }



        $("#btnaplicarfiltro").click(function () {

            _PaginaActual = 1
            var _idgenero = $("input[name=genero]:checked").val()
            var _idclasificacion = $("input[name=clasificacion]:checked").val()
            MostrarPeliculas(_idgenero, _idclasificacion)

        })



        $(document).on("click", "button.page-link", function () {

            if ($(this).hasClass("previus")) {
                _PaginaActual = _PaginaActual - 1;
            } else if ($(this).hasClass("next")) {
                _PaginaActual = _PaginaActual + 1;
            } else {
                _PaginaActual = parseInt($(this).text())
            }

            var _idgenero = $("input[name=genero]:checked").val()
            var _idclasificacion = $("input[name=clasificacion]:checked").val()
            MostrarPeliculas(_idgenero, _idclasificacion)

        })


    </script>
    
    
    }
