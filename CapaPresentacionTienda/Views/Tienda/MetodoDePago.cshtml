
@{
    ViewBag.Title = "MetodoDePago";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<div class="container my-5" style="display: flex; justify-content: center;">
    <div class="row" style="width: 80%;">

        <div class="col-sm-12">

            <div class="card borde-negro">
                <div class="card-body fondo-negro" style="padding: 10px 0 20px;">

                    <div class="row" style="justify-content: center">

                        <div class="col-sm-9">

                            <div class="card borde-negro">
                                <div class="card-body fondo-negro" style="display: flex; flex-direction: column;">
                                    <div class="col-md-12 d-flex justify-content-center">
                                        <h3 class=" fw-bolder m-0 mb-3">Completá los datos de tu tarjeta</h3>
                                    </div>
                                    <!--formulario-->
                                    <form method="post">
                                        <style>
                                            #hideValuesOnSelect {
                                                display: none;
                                            }
                                        </style>
                                        <div style="display: flex ">
                                            <div class="mb-2" style="width: 40%; margin-left: 7%;">

                                                <label for="metodopago" class="form-label">Método de pago</label>
                                                <select class="form-select form-select-sm btn-negro color-gris" id="metodopago" onchange="displayDivDemo('hideValuesOnSelect', this)">
                                                    <option value="0">Tarjeta de débito</option>
                                                    <option value="1">Tarjeta de crédito</option>
                                                </select>
                                            </div>
                                            <div class="mb-2" style="width:40%; margin-left:7%" id="hideValuesOnSelect">
                                                <label for="cuotas" class="form-label">Cuotas</label>
                                                <select class="form-select form-select-sm btn-negro color-gris">
                                                    <option value="1">1 cuota</option>
                                                    <option value="2">3 cuotas</option>
                                                    <option value="3">6 cuotas</option>
                                                </select>
                                            </div>

                                            <script>
                                                function displayDivDemo(id, elementValue) {
                                                    document.getElementById(id).style.display = elementValue.value == 1 ? 'block' : 'none';
                                                }
                                            </script>

                                        </div>
                                        <div style="display: flex; justify-content: space-evenly ">
                                            <div class="mb-2" style="width: 40%;">
                                                <label for="dni" class="form-label">DNI del titular</label>
                                                <input type="text" class="form-control form-control-sm btn-negro color-gris" id="dni" autocomplete="off" maxlength="8" placeholder="Sin putnos ni espacios">
                                            </div>

                                            <div class="mb-2" style="width:40%">
                                                <label for="numtarj" class="form-label">Número de tarjeta</label>
                                                <input type="text" id="numtarj" name="numtarj" class="form-control form-control-sm btn-negro color-gris" placeholder="Sin espacios" maxlength="19" autocomplete="off" />
                                            </div>
                                        </div>

                                        <div style="display: flex; justify-content: space-evenly ">
                                            <div class="mb-2" style="width:40%">
                                                <label for="fechacad" class="form-label">Fecha de caducidad</label>
                                                <input type="text" class="form-control form-control-sm btn-negro color-gris" id="fechacad" autocomplete="off" placeholder="MM" style="display: inline-block; width: 48%;" maxlength="2">
                                                <input type="text" class="form-control form-control-sm btn-negro color-gris" id="fechacad" autocomplete="off" placeholder="AA" style="display: inline-block; width: 48%;" maxlength="2">
                                            </div>
                                            <div class="mb-2" style="width:40%">
                                                <label for="codseg" class="form-label">Código de seguridad</label>
                                                <input type="text" class="form-control form-control-sm btn-negro color-gris" id="codseg" autocomplete="off" maxlength="3" placeholder="XXX">
                                            </div>
                                        </div>
                                        <div class="d-grid">
                                            <button class="btn w-50 btn-verde" type="button" onclick="RealizarPago()" style=" margin: 2% 30% 0;">
                                                <i class="fas fa-credit-card"></i> Procesar pago
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

        jQuery(document).ready(function(){
            jQuery("#codseg").on('input', function (evt) {
                jQuery(this).val(jQuery(this).val().replace(/[^0-9]/g, ''));
            });
            jQuery("#fechacad").on('input', function (evt) {
                jQuery(this).val(jQuery(this).val().replace(/[^0-9]/g, ''));
            });
            jQuery("#numtarj").on('input', function (evt) {
                jQuery(this).val(jQuery(this).val().replace(/[^0-9\s]/g, ''));

            });
            jQuery("#dni").on('input', function (evt) {
                jQuery(this).val(jQuery(this).val().replace(/[^0-9]/g, ''));
            });
        });

    document.getElementById('numtarj').addEventListener('input', function (e) {
        var target = e.target, position = target.selectionEnd, length = target.value.length;

        target.value = target.value.replace(/[^\dA-Z]/g, '').replace(/(.{4})/g, '$1 ').trim();
        target.selectionEnd = position += ((target.value.charAt(position - 1) === ' ' && target.value.charAt(length - 1) === ' ' && length !== target.value.length) ? 1 : 0);
    });


    function RealizarPago() {

        if ($("#metodopago").val() == null || $("#numtarj").val() == "" || $("#fechacad").val() == "" || $("#codseg").val() == "") {
            swal("", "Debe completar los datos de pago", "warning");
            return
        }
        else if ($("#numtarj").val().length < 19 || $("#fechacad").val().length < 2 || $("#codseg").val().length < 3) {
            swal("", "Formato de tarjeta inválido", "warning");
            return
        }


        jQuery.ajax({
            url: '@Url.Action("ProcesarPago","Tienda")',
            type: "POST",
            data: JSON.stringify({ MetodoPago: $("#metodopago option:selected").val(), IdFuncion, Butacas }),
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                $.LoadingOverlay("hide")

                if (data.Status) {

                    window.location.href = data.Link;

                } else {

                    swal("", "Volvé a intentarlo más tarde", "warning");
                }
            },
            beforeSend: function () { $.LoadingOverlay("show") },
            error: function (error) { $.LoadingOverlay("hide") }
        })
    }
</script>