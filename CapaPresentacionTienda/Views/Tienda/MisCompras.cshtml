@model List<CapaEntidad.DetalleBoleto>
@{
    ViewBag.Title = "MisCompras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row mt-5">
        <div class="col-sm-12">

            @{
                if (Model.Count > 0)
                {

                    foreach (var item in Model)
                    {

                        <div class="row mb-3">
                                        <div class="col-sm-12">

                                                        <div class="card">
                                                                        <div class="card-body bg-light">
                                                                            <h6>Nro. de transacción: @item.oComprobante.Numero</h6>
                                                                            <h6>Fecha: @item.oComprobante.Fecha</h6>
                                                                            <div class="table-responsive">

                                                                                <table class="table table-bordered">

                                                                                    <thead>
                                                                                        <tr>
                                                                                            <th>Película</th>
                                                                                            <th>Fecha</th>
                                                                                            <th>Hora</th>
                                                                                            <th>Sala</th>
                                                                                            <th>Butaca</th>
                                                                                        </tr>

                                                                                    </thead>
                                                                                    <tbody class="bg-white">
                                                                                        <tr>
                                                                                            <td>
                                                                                                <img class="card-img-top mb-0 mb-md-0" src="data:/image/@item.oFuncion.oPelicula.Extension;base64,@item.oFuncion.oPelicula.Base64" style="width: 120px; height: 120px; border-radius: 5px" />
                                                                                                <div>@item.oFuncion.oPelicula.Nombre</div>
                                                                                                <div>@item.oFuncion.oIdioma.Descripcion</div>
                                                                                            </td>
                                                                                            <td valign="middle">
                                                                                                @item.oFuncion.Fecha
                                                                                            </td>
                                                                                            <td valign="middle">
                                                                                                @item.oFuncion.Hora
                                                                                            </td>

                                                                                            <td valign="middle">
                                                                                                @item.oFuncion.oSala.Descripcion
                                                                                            </td>
                                                                                            <td valign="middle">
                                                                                                @item.oButaca.Fila@item.oButaca.Numero
                                                                                            </td>
                                                                                        </tr>

                                                                                    </tbody>

                                                                                </table>
                                                                            </div>
                                                                            <div class="d-flex flex-row-reverse">
                                                                                <div class="btn btn-primary disabled mx-3">Precio: $ @item.Precio</div>
                                                                            </div>
                                                                        </div>


                                                        </div>

                                        </div>
                        </div>

                    }


                }
                else { 
                    <div class="row mb-3">
                        <div class="col-sm-12 text-center">
                            <h1>Parece que todavía no compraste nada</h1>
                            <img src="~/Images/logoTicket.png" />
                        </div>
                    </div>
                
                
                }


             }

        </div>


    </div>

</div> 