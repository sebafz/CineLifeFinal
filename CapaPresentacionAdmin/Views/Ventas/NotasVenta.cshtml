
@{
    ViewBag.Title = "Notas de venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item">Ventas</li>
    <li class="breadcrumb-item active">Notas de venta</li>
</ol>

<div class="card">
    <div class="card-header">

        <i class="fas fa-money-bill me-1"></i> Lista de notas de venta
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-primary" onclick="abrirModal()">Registar nueva</button>
            </div>
        </div>

        <hr />

        <table id="tabla" class="display cell-border" style="width: 100%">
            <thead>
                <tr>
                    <th>Nro. nota</th>
                    <th>Nro. facutra</th>
                    <th>Letra</th>
                    <th>Proveedor</th>
                    <th>Sede</th>
                    <th>Fecha</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Registar nota de venta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6 class='alert alert-warning'>
                    Seleccione factura de venta para vincular a la nota.
                </h6>
                <table id="tablaFactura" class="display cell-border" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Nro. facutra</th>
                            <th>Letra</th>
                            <th>Proveedor</th>
                            <th>Sede</th>
                            <th>Fecha</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>

                <div class="row mt-2">
                    <div class="col-12">

                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            A simple danger alert—check it out!
                        </div>

                    </div>

                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="CancelarFact()">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<!--Modal agregar-->
<div class="modal fade" id="FormModalAgregar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Selección de productos</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6 class='alert alert-warning'>
                    A continuación se visualizan los productos de la factura anterior. Haga clic en el lápiz para editar precio y cantidad.
                </h6>
                <table id="tablaProducto" class="display cell-border" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Cantidad</th>
                            <th>Precio</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <div class="row mt-2">
                    <div class="col-12">

                        <div id="mensajeErrorAgregar" class="alert alert-danger" role="alert">
                            A simple danger alert—check it out!
                        </div>

                    </div>

                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="Cerrar()">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnguardar" onclick="Registrar()">Registrar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal fecha-->
<div class="modal fade" id="FormModalFecha" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Registrar nota de venta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="row g-2">

                    <div class="col-sm-12">
                        <label class="form-label">Fecha</label>
                        <input class="form-control" type="text" id="txtfecha" name="fecha" />
                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="CancelarFecha()">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnguardar" onclick="SiguienteFecha()">Siguiente</button>
            </div>
        </div>
    </div>
</div>

<!--Modal ver-->
<div class="modal fade" id="FormModalVer" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Detalle de la nota</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input id="txtidvinculo" type="hidden" value="0" />
                <input id="txtsedevinculo" type="hidden" value="0" />
                <input id="txtproveedorvinculo" type="hidden" value="0" />
                <input id="txtletravinculo" type="hidden" value="0" />

                <table id="tablaVer" class="display cell-border" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="CerrarVer()">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal añadir producto-->
<div class="modal fade" id="FormModalProducto" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Datos del producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input id="txtidprod" type="hidden" value="0" />
                <input id="txtnomprod" type="hidden" value="" />

                <div class="row mt-2 justify-content-center">

                    <div class="col-sm-6">
                        <label for="txtcantidad" class="form-label">Cantidad</label>
                        <input type="number" class="form-control" id="txtcantidad" autocomplete="off" min="1">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtprecio" class="form-label">Precio</label>
                        <input type="text" class="form-control" id="txtprecio" autocomplete="off">
                    </div>

                </div>

                <div class="row mt-2">
                    <div class="col-12">

                        <div id="mensajeErrorProd" class="alert alert-danger" role="alert">
                            A simple danger alert—check it out!
                        </div>

                    </div>

                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="CerrarCantidad()">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnguardar" onclick="AceptarCantidad()">Aceptar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

        CancelarFecha()
        $("#collapseCompras").click();

        var tabladata;
        var tabladataVer;
        var tabladataProducto;
        var tabladataFactura;
        var filaSeleccionada;

        jQuery(document).ready(function () {
            jQuery("#txtcantidad").on('input', function (evt) {
                jQuery(this).val(jQuery(this).val().replace(/^0[0-9]+/g, ''));
            });
            jQuery("#txtprecio").on('input', function (evt) {
                jQuery(this).val(jQuery(this).val().replace(/^0[0-9]+/g, ''));
            });
        });

        tabladata = $("#tabla").DataTable({
            responsive: true,
            ordering: true,
            "ajax": {
                url: '@Url.Action("ListarComprobantes", "Ventas")',
                type: "GET",
                data: { tipo: 2},
                dataType: "json",
                contentType: "application/json; charset=utf-8"
            },
            "columns": [
                { "data": "Numero" },
                {
                    "data": "oComprobante", "render": function (data) {
                        return data.NumeroVinculo
                    }
                },
                { "data": "Letra" },
                {
                    "data": "oProveedor", "render": function (data) {
                        return data.Nombres
                    }
                },
                {
                    "data": "oSede", "render": function (data) {
                        return data.Nombre
                    }
                },
                { "data": "Fecha" },
                { "data": "Total" },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-ver"><i class="fas fa-eye"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "50px"
                }

            ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
            }

        });

        tabladataFactura = $("#tablaFactura").DataTable({
            responsive: true,
            ordering: true,
            "ajax": {
            url: '@Url.Action("ListarComprobantes", "Ventas")',
            type: "GET",
            data: { tipo: 1},
            dataType: "json",
            contentType: "application/json; charset=utf-8"
        },
        "columns": [
            { "data": "Numero" },
            { "data": "Letra" },
            {
                "data": "oProveedor", "render": function (data) {
                    return data.Nombres
                }
            },
            {
                "data": "oSede", "render": function (data) {
                    return data.Nombre
                }
            },
            { "data": "Fecha" },
            { "data": "Total" },
            {
                "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-agregar"><i class="fas fa-plus"></i></button>',
                "orderable": false,
                "searchable": false,
                "width": "50px"
            }

        ],
        "language": {
            "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
        }

        });

        function cargarTabladataProducto(obj) {
            $("#txtidvinculo").val(obj.IdComprobante);
            $("#txtletravinculo").val(obj.Letra);
            $("#txtproveedorvinculo").val(obj.oProveedor.IdProveedor);
            $("#txtsedevinculo").val(obj.oSede.IdSede);

            tabladataProducto = $("#tablaProducto").DataTable({
                responsive: true,
                ordering: true,
                "ajax": {
                    url: '@Url.Action("ListarProductosXComprobante", "Mantenedor")',
                    type: "GET",
                    data: { id: obj.IdComprobante},
                    dataType: "json",
                    contentType: "application/json; charset=utf-8"
                },
                "columns": [
                    {
                        "data": "oProducto", "render": function (data) {
                            return data.Nombre
                        }
                    },
                    {
                        "data": "oProducto", "render": function (data) {
                            return data.Descripcion
                        }
                    },
                    { "data": "Cantidad" },
                    { "data": "Precio" },
                    {
                        "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                            '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                        "orderable": false,
                        "searchable": false,
                        "width": "100px"
                    }
                ],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
                }

            });
        }

        function abrirModal() {

            $("#FormModalFecha").modal("show");

        }

        function SiguienteFecha() {
            $("#mensajeError").hide();
            $("#FormModalFecha").modal("hide");
            $("#FormModal").modal("show");
        }

        $("#tablaFactura").on("click", '.btn-agregar', function () {

            filaSeleccionada = $(this).closest("tr");

            var data = tabladataFactura.row(filaSeleccionada).data();

            cargarTabladataProducto(data);

            $("#FormModal").modal("hide");
            $("#mensajeErrorAgregar").hide();
            $("#FormModalAgregar").modal("show");



        })

        $("#tabla tbody").on("click", '.btn-ver', function () {

            filaSeleccionada = $(this).closest("tr");

            var data = tabladata.row(filaSeleccionada).data();


            tabladataVer = $("#tablaVer").DataTable({
                responsive: true,
                ordering: true,
                "ajax": {
                    url: '@Url.Action("ListarProductosXComprobante", "Mantenedor")',
                    type: "GET",
                    data: { id: data.IdComprobante},
                    dataType: "json",
                    contentType: "application/json; charset=utf-8"
                },
                "columns": [
                    {
                        "data": "oProducto", "render": function (data) {
                            return data.Nombre
                        }
                    },
                    {
                        "data": "oProducto", "render": function (data) {
                            return data.Descripcion
                        }
                    },
                    { "data": "Precio" },
                    { "data": "Cantidad" }
                ],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
                }

            });

            $("#FormModalVer").modal("show");

        })

        $("#tablaProducto tbody").on("click", '.btn-eliminar', function () {
            filaSeleccionada = $(this).closest("tr");

            $("#FormModalAgregar").modal("hide");
            swal({
                title: "¿Desea eliminar este producto?",
                text: "No aparecerá en la nota cuando haga clic en registrar.",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "Aceptar",
                cancelButtonText: "Cancelar",
                closeOnConfirm: true
            },
                function () {
                    tabladataProducto.row(filaSeleccionada).remove().draw();
                    $("#FormModalAgregar").modal("show");
                });
        })

        $("#tablaProducto tbody").on("click", '.btn-editar', function () {

            filaSeleccionada = $(this).closest("tr");

            var data = tabladataProducto.row(filaSeleccionada).data();

            $("#txtidprod").val(data.oProducto.IdProducto);
            $("#txtnomprod").val(data.oProducto.Nombre);
            $("#txtdescripcion").val(data.oProducto.Descripcion);
            $("#txtprecio").val(data.Precio);
            $("#txtcantidad").val(data.Cantidad);


            $("#mensajeErrorProd").hide();

            $("#FormModalAgregar").modal("hide");
            $("#FormModalProducto").modal("show");

        })

        function CancelarFecha() {
            $("#txtfecha").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker('setDate', new Date())
        }

        function CerrarCantidad() {
            $("#FormModalAgregar").modal("show");
        }

        function AceptarCantidad() {
            $("#mensajeErrorProd").hide();
            if (parseInt($("#txtcantidad").val()) > 0 && parseInt($("#txtprecio").val()) > 0) {

                $("#FormModalProducto").modal("hide");
                $("#FormModalAgregar").modal("show");

                var DetalleComprobante = {
                    Precio: $("#txtprecio").val(),
                    Cantidad: $("#txtcantidad").val(),
                    oProducto: {
                        IdProducto: $("#txtidprod").val(),
                        Nombre: $("#txtnomprod").val(),
                        Descripcion: $("#txtdescripcion").val(),
                    }
                }
                tabladataProducto.row(filaSeleccionada).data(DetalleComprobante).draw(false);
                filaSeleccionada = null;
            }
            else {
                $("#mensajeErrorProd").text("Cantidad y precio no pueden ser cero");
                $("#mensajeErrorProd").show();
            }
        }

        function Cerrar() {
            tabladataProducto.destroy();
        }

        function CerrarVer() {
            tabladataVer.destroy();
        }

        function Registrar() {

            if (tabladataProducto.data().count()) {

                swal({
                title: "Estás por registrar una nueva nota",
                text: "Verificá los datos ingresados. Estos no podrán ser modificados luego.",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "Aceptar",
                cancelButtonText: "Cancelar",
                closeOnConfirm: true
                },
                function () {

                    var Comprobante = {
                        Letra: $("#txtletravinculo").val(),
                        Ingreso: 1,
                        Tipo: 2,
                        IdComprobanteVinculo: $("#txtidvinculo").val(),
                        oProveedor: {
                            IdProveedor: $("#txtproveedorvinculo").val()
                        },
                        oSede: {
                            IdSede: $("#txtsedevinculo").val()
                        },
                    };

                    jQuery.ajax({
                        url: '@Url.Action("RegistrarComprobante", "Ventas")',
                        type: "POST",
                        data: JSON.stringify({ comprobante: Comprobante, productos: tabladataProducto.rows().data() }),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {

                            $(".modal-body").LoadingOverlay("hide");

                            if (data.resultado != 0) {

                                tabladata.row.add(Comprobante).draw(false);
                                $("#FormModalAgregar").modal("hide");

                            } else {
                                $("#mensajeErrorAgregar").text(data.mensaje);
                                $("#mensajeErrorAgregar").show();
                            }
                        },
                        error: function (error) {

                            $(".modal-body").LoadingOverlay("hide");
                            $("#mensajeErrorAgregar").text("Error Ajax");
                            $("#mensajeErrorAgregar").show();
                        },
                        beforeSend: function () {
                            $(".modal-body").LoadingOverlay("show", {
                                imageResizeFactor: 2,
                                text: "Cargando...",
                                size: 14
                            })
                        }
                    });

                    $("#FormModalAgregar").modal("hide");
                    tabladataProducto.destroy();

                });

            }
            else {
                $("#mensajeErrorAgregar").text('La tabla con productos no puede estar vacía');
                $("#mensajeErrorAgregar").show();
            }
        }


    </script>


}





